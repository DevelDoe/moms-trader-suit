{
    "name": "Moms_Trader_Suit",
    "version": "0.1.0",
    "description": "An Electron app with a transparent background displaying specific words.",
    "main": "src/main/main.js",
    "scripts": {
        "start": "electron .",
        "package": "electron-packager . Moms_Trader_Suit --platform=win32 --arch=x64 --out=dist --overwrite",
        "package-all": "electron-packager . Moms_Trader_Suit --all --out=dist --overwrite",
        "package-mac": "electron-packager . Moms_Trader_Suit --platform=darwin --arch=x64 --out=dist --overwrite",
        "package-linux": "electron-packager . Moms_Trader_Suit --platform=linux --arch=x64 --out=dist --overwrite"
    },
    "author": "ChatGPT & M Ray",
    "license": "MIT",
    "dependencies": {
        "chokidar": "^4.0.3",
        "ignore": "^7.0.3"
    },
    "devDependencies": {
        "electron": "^26.1.0",
        "electron-packager": "^17.1.2"
    },
    "build": {
        "files": [
            "src/**/*",
            "assets/**/*"
        ]
    }
}
