{
    "name": "Moms_Trader_Tools",
    "version": "0.10.2",
    "description": "Moms Trader Tools is a comprehensive suite designed to enhance the trading experience for both novice and experienced day traders. With a focus on efficiency and user-friendliness, this toolset aims to streamline your trading process and provide a competitive edge.",
    "main": "src/main/main.js",
    "scripts": {
        "start": "electron .",
        "package": "electron-packager . Moms_Trader_Tools --platform=win32 --arch=x64 --out=dist --overwrite",
        "package-all": "electron-packager . Moms_Trader_Tools --all --out=dist --overwrite",
        "package-mac": "electron-packager . Moms_Trader_Tools --platform=darwin --arch=x64 --out=dist --overwrite",
        "package-linux": "electron-packager . Moms_Trader_Tools --platform=linux --arch=x64 --out=dist --overwrite",
        "publish": "electron-builder -p always"
    },
    "author": "Morgan A Ray",
    "license": "MIT",
    "dependencies": {
        "chokidar": "^4.0.3",
        "electron-updater": "^6.3.9",
        "ignore": "^7.0.3"
    },
    "devDependencies": {
        "electron": "^26.1.0",
        "electron-builder": "^23.6.0",  
        "electron-packager": "^17.1.2"
    },
    "build": {
        "appId": "com.moms.trader.tools",
        "productName": "Moms Trader Tools",
        "directories": {
            "output": "dist"
        },
        "files": [
            "src/**/*",
            "assets/**/*"
        ],
        "win": {
            "target": "nsis",
            "icon": "assets/icon.ico"
        },
        "mac": {
            "target": "dmg",
            "icon": "assets/icon.icns"
        },
        "linux": {
            "target": "AppImage",
            "icon": "assets/icon.png"
        },
        "publish": {
            "provider": "github",
            "owner": "DevelDoe",
            "repo": "moms-trader-tools"
        }
    }
}
